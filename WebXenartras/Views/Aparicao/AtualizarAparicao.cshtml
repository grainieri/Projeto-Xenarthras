@model Aparicao
@{ Layout = "_Layout"; ViewBag.Title = "Atualizar Aparição";}

<h2>Atualizar Aparição </h2>
<form method="post">
    <div class="form-group">
        <label asp-for="apa_ID">ID</label>
        <input class="form-control" asp-for="apa_ID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="apa_Comentario">Comentário</label>
        <input class="form-control" asp-for="apa_Comentario" />
    </div>
    <div class="form-group">
        <label asp-for="apa_Status">Status</label>
        <input class="form-control" asp-for="apa_Status" />
    </div>
    <div class="form-group">
        <label asp-for="ani_Especie">Espécie</label>
        <input class="form-control" asp-for="ani_Especie" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Atualizar</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Aparição</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Comentario</th>
                <th>Status</th>
                <th>Espécie</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.apa_ID</td>
                <td>@Model.apa_Comentario</td>
                <td>@Model.apa_Status</td>
                <td>@Model.ani_Especie</td>
            </tr>
        </tbody>
    </table>
}