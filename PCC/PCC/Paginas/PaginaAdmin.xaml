<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCC.Paginas.PaginaAdmin">
    <ContentPage.Content>
        <StackLayout>
            <Grid Margin="10" VerticalOptions="EndAndExpand">
                <Label Text="Bem vindo, Administrador!" Margin="8" FontSize="20" HorizontalOptions="Center" Grid.ColumnSpan="2" Grid.Row="0"/>
                <Button Text="Aparições Pendentes"
                        Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Clicked="AbrirListaAdminAparicoes"/>
                <Button Text="Pesquisar Usuário"
                        Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="2" Clicked="AbrirPesquisaUsuario"/>
                <Button Text="Pesquisar Aparição"
                        Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="2" Clicked="AbrirPesquisaAparicao"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>